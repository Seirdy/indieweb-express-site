<h1 class="c-page-title">{{data.title}}</h1>

{{#if admin}}
<ul>
  <li><a href="/{{id}}/create">Create</a></li>
</ul>
{{/if}}

{{{content}}}

{{#if children}}
<h2 class="p-name">Latest notes</h2>
<p class="p-summary">Check out these sick notes, baby.</p>
<div class="c-card-grid h-feed">
  {{#each children}}
    <section class="c-note-card h-entry">
      {{!-- <header class="util-sr-only"> --}}
        <h2 class="p-name"><a href="{{this.path}}" class="u-url">{{this.data.title}}</a></h2>
      {{!-- </header> --}}

      <div class="c-content">
        {{{this.rendered}}}

        {{#if data.images}}
        {{#each data.images}}
        <a href="/notes/{{../id}}/{{this.file}}/900"><img src="/notes/{{../id}}/{{this.file}}/300" alt="{{this.alt}}"></a>
        {{/each}}
        {{/if}}
      </div>

      <footer>
        <p class="c-date--small"><a href="{{this.path}}"><datetime class="dt-published" datetime="{{data.created}}">{{formatDate data.created "cccc dd LLLL, yyyy"}}</datetime></a></p>
      </footer>

    </section>
  {{/each}}
</div>
{{/if}}
